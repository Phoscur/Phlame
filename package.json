{
  "name": "phlame",
  "version": "0.0.1",
  "license": "AGPLv3",
  "type": "module",
  "scripts": {
    "start": "vite",
    "test-engine": "cd engine && npm test",
    "tsc-engine": "cd engine && npm run tsc",
    "build-engine": "cd engine && npm run build",
    "lint-engine": "eslint engine/src",
    "build": "vite build",
    "test": "vitest run && cd engine && npx vitest run",
    "coverage": "vitest --coverage && cd engine && npx vitest --coverage",
    "play": "playwright test --ui",
    "e2e": "playwright test",
    "ci": "start-server-and-test start-server http://localhost:4200 e2e",
    "start-server": "cross-env NODE_ENV=test npm start",
    "lint": "eslint src",
    "tsc": "tsc -p tsconfig.spec.json --noEmit",
    "preview": "tsx src/server"
  },
  "private": true,
  "resolutions": {},
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/plugin-proposal-decorators": "^7.28.0",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/js": "^9.31.0",
    "@hono/vite-dev-server": "^0.20.0",
    "@playwright/test": "^1.54.1",
    "@tailwindcss/vite": "^4.1.11",
    "@types/node": "^24.0.13",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "cross-env": "^10.0.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-vitest": "^0.5.4",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "prettier-eslint": "^16.4.2",
    "start-server-and-test": "^2.1.0",
    "tailwindcss": "^4.1.11",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.37.0",
    "vite": "^7.1.11",
    "vite-plugin-babel": "^1.3.2",
    "vite-plugin-dts": "^4.5.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@hono/node-server": "^1.16.0",
    "@joist/di": "^4.2.3",
    "hono": "^4.8.5",
    "html-element": "^2.3.1",
    "htmx.org": "^1.9.12",
    "nanoid": "^5.1.5",
    "signal-polyfill": "^0.2.2"
  },
